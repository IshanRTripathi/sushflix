# Ensure consistent package installations
engine-strict=true

# Package lock settings
package-lock=true
package-lock-only=false

# Network settings
fetch-retries=3
fetch-timeout=60000

# Cache settings
cache-min=10
prefer-offline=true

# Security settings
save-prefix=^
audit-level=high
fund=false

# Workspace settings
workspaces-prefix=optional

# Ensure peer dependencies are installed
auto-install-peers=true
